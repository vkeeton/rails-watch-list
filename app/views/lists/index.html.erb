<div class="container">
  <h1>Your Movie Lists</h1>
  <div class="row">
    <div class="col-sm-6">
      <div class="card">
        <% @lists.each do |list| %>
          <div class="card-body">
            <h5 class="card-title"><%= list.name %></h5>
            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            <%# you can use an a tag - with interpolation %>
            <%= link_to "More Info...", list_path(list) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%= link_to 'Add a new list', new_list_path %>
</div>
