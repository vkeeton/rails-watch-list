<div class="container">
  <h1><%= @list.name %></h1>
  <% @list.movies.each do |movie| %>
    <div class="card" style="width: 18rem;">
      <img src="<%= movie.poster_url %>" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= movie.title %></h5>
        <p class="card-text"><%= movie.overview %></p>
        <% bookmark = Bookmark.find_by(params[list: @list, movie: movie]) %>
        <%= link_to "Destroy", bookmarks_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
  <% end %>
</div>
